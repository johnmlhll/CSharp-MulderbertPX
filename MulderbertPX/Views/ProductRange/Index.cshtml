@model MulderbertPX.Models.ProductModel

@{
    ViewBag.Title = "ProductRange";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div id="product_range">
    <h2>Product Range</h2>
   <!--V1.0 has no payment feature, so these "completed orders" will be called back by a real person to manually process payment and arrange delivery-->
    <div class="product_display">
