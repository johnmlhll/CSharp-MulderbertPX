                    @Html.EnumDropDownListFor(c => c.ProductName, "Choose Your Product", new { @class = "form-control" })</p>
                    <p>@Html.LabelFor(c => c.UnitQuanity)
                    @Html.EnumDropDownListFor(c => c.UnitQuanity, "Select Quanity for this Order", new { @class = "form-control" })</p>
